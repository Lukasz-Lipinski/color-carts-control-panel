{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "server",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "server/types/*"]
    }
  },
  "include": ["./**/*"]
}
